{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@lib/testlib": "<rootDir>/../libs/testlib/src",
    "@lib/testlib/(.*)": "<rootDir>/../libs/testlib/src/$1"
  }
}
